@model Thinh.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>@Html.DisplayFor(model => model.productName)</h4>
    <hr />
    <img src="@Html.DisplayFor(model => model.productImgUrl)" alt="@Html.DisplayFor(model => model.productName)">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.productCategory)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.productCategory)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.productDescription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.productDescription)
        </dd>
        <dd>
        </dd>
    </dl>
    <a class="btn btn-primary" href="@Html.DisplayFor(model => model.productUrl)">Visit Seller</a>
    <a class="btn btn-outline-primary" asp-action="Wish" asp-route-id="@Model.productId">Add to Wishlist</a>
    <br />
    <br />
</div>
<div>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
